<% if @article.errors.any? %>

    <h3> Errors in article </h3>

    <ul>
      
      <% @article.errors.full_messages.each do |err|  %>
		  
	 <li> <%= err %> </li>	

       <% end %>


    </ul>

<% end %>

<%= form_for @article do |f| %>

	<p>
	 <%= f.label :title %><br />
	 <%= f.text_field :title %>
	</p>
        
        <p>
	 <%= f.label :description, "Description" %><br />
	 <%= f.text_area :description %>
       </p>

       <p>
        <%= f.submit  %>
       </p>




<% end %>
